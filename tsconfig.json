{
    "compilerOptions": {
        "target": "ESNext",
        "module": "esnext",
        "moduleResolution": "Node",
        "lib": [
            "ESNext",
            "ES2021.String",
            "ES2021.Promise",
            "DOM"
        ],
        "baseUrl": "./front",
        "strict": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "paths": {
            "@/*": [
                "./*"
            ]
        },
        "useDefineForClassFields": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noEmit": true,
        "allowJs": true,
        "composite": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "importHelpers": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "vite.config.ts",
        "front/**/*.*"
    ],
    "exclude": [
        "node_modules",
        "front_temp"
    ]
}
